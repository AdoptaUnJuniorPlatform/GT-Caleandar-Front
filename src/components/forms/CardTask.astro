<div class="modal" aria-modal="true" role="dialog" aria-labelledby="modalTitle">
  <div class="modal-content">
    <div class="header-form">
      <h1 id="modalTitle" class="modal-title" aria-label="Cerrar">
        Crear Tarea
      </h1>
      <button class="close-btn" aria-label="Cerrar">
        <img src="/public/icons/icon-close.svg" alt="Cerrar" class="btn-icon" />
      </button>
    </div>
    <form class="task-form" action="#">
      <div class="form-group">
        <input
          type="text"
          id="name"
          name="name"
          class="input-name"
          placeholder="| Nueva Tarea"
        />
      </div>

      <div class="form-group">
        <label for="participants" class="label-participant">
          <img
            src="/public/icons/icon-users.svg"
            alt="Participantes icono"
            class="icon"
          /> Participantes
        </label>
        <input
          type="text"
          id="participants"
          class="participant-input"
          placeholder="Ingresa nombre de participante"
          required
        />
      </div>

      <div class="form-group-calendar">
        <label for="day" class="label-calendar">
          <img
            src="/public/icons/icon-calendar.svg"
            alt="Calendario icono"
            class="icon"
          /> Seleccionar fecha 
        </label>
        <div class="custom-date-picker">
          <input type="date" id="date" class="input-date" required>
          <img
            src="/public/icons/icon-arrow.svg"
            alt="Icono Flecha"
            class="arrow"
          />
        </div>
      </div>

      <div class="form-group-priority">
        <label for="priority" class="label-priority">
          <img src="/public/icons/icon-priority.svg"
          alt="Prioridad icono"
          class="icon"
          /> Prioridad
        </label>
        <div class="input-radio">
          <label class="label-radio">
            <input type="radio" id="alta" name="priority" value="alta" class="radio alta" />
            Alta
          </label>
          <label class="label-radio">
            <input type="radio" id="media" name="priority" value="media" class="radio media" />
            Media
          </label>
          <label class="label-radio">
            <input type="radio" id="baja" name="priority" value="baja" class="radio baja" />
            Baja
          </label>
        </div>        
      </div>

      <div class="form-group-description">
        <label for="description" class="label-description">
          <img
            src="/public/icons/icon-description.svg"
            alt="Descripcion icono"
            class="icon"
          /> Descripción
        </label>
        <textarea
          id="description"
          name="description"
          class="text-description"
          placeholder="Breve descripción de la actividad"
          required>
        </textarea>
      </div>

      <div class="form-group-reminder">
        <label for="reminders" class="label-reminders">
          <img
            src="/public/icons/icon-reminder.svg"
            alt="Recordatorios icono"
            class="icon"
          /> Recordatorios
        </label>
      </div>

      <div class="form-group-alert">
        <label for="alerts" class="label-alerts">
          <img
            src="/public/icons/icon-alert.svg"
            alt="Alertas icono"
            class="icon"
          /> Alertas
        </label>
        <div class="custom-time-picker">
          <input type="time" id="alert-time" class="input-time" name="alert-time">
        <img
            src="/public/icons/icon-arrow.svg"
            alt="Icono Flecha"
            class="arrow"
          />
        </div>
        <!-- <select id="alerts" class="input-select">
          <option disabled selected>Seleccionar alertas</option>
          <option value="email">Por correo electrónico</option>
          <option value="sms">Por SMS</option>
          <option value="notificacion">Notificación en la app</option>
        </select> -->
      </div>

      <div class="form-group-repeat">
        <label for="repeat" class="label-repeat">
          <img
            src="/public/icons/icon-repeat.svg"
            alt="Repite icono"
            class="icon"
          /> Repite
        </label>
        <select id="repeat" class="input-select">
          <option disabled selected>Seleccionar si se repite</option>
          <option value="nunca">Único</option>
          <option value="diario">Diario</option>
          <option value="semanal">Semanal</option>
          <option value="mensual">Mensual</option>
        </select>
      </div>

      <div class="form-actions">
        <button type="button" class="cancel-btn">Cancelar</button>
        <button type="submit" class="submit-btn">Crear</button>
      </div>
    </form>
  </div>
</div>

<script>
  // Función para cerrar el modal
  function closeModal() {
    const modal = document.querySelector(".modal");
    if (modal) {
      modal.classList.remove("is-active"); // Quita la clase para ocultar el modal
    } else {
      console.error("No se encontró el modal.");
    }
  }

  // Inicializa el modal y los eventos
  document.addEventListener("DOMContentLoaded", () => {
    // Encuentra el botón de cerrar y el botón cancelar
    const closeBtn = document.querySelector(".close-btn");
    const cancelBtn = document.querySelector(".cancel-btn");
    const modal = document.querySelector(".modal");

    // Agregar eventos a los botones de cerrar
    if (closeBtn) {
      closeBtn.addEventListener("click", closeModal);
    } else {
      console.error("No se encontró el botón de cerrar.");
    }

    if (cancelBtn) {
      cancelBtn.addEventListener("click", closeModal);
    } else {
      console.error("No se encontró el botón de cancelar.");
    }

    // Inicialmente ocultar el modal
    if (modal) {
      modal.classList.remove("is-active");
    } else {
      console.error("No se encontró el modal.");
    }
  });
</script>

<style>
  .modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(218, 218, 218, 0.616);
    display: none;
    justify-content: center;
    align-items: center;
    /* z-index: 1000; */
    font-family: Montserrat, sans-serif;
  }

  .modal.is-active {
    display: flex; /* Muestra el modal cuando se activa */
  }

  .modal-content {
    background: #fcffff;
    border-radius: 8px;
    padding: 20px 16px 16px 16px;
    width: 400px;
    height: 660px;
    position: absolute;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.158);
    flex-direction: column;
  }

  .task-form {
    display: flex;
    flex-direction: column;
    gap: 15px;
    padding: 12px 8px;
  }

  .close-btn {
    background: none;
    border: none;
  }
  .header-form {
    display: flex;
    padding-top: 0px;
    margin-bottom: 12px;
    color: #071213;
    font-weight: 500;
    justify-content: space-between;
  }

  .modal-title {
    margin: auto 0;
    font-size: 16px;
  }

  .btn-icon {
    aspect-ratio: 1;
    object-fit: contain;
    object-position: center;
    width: 24px;
    height: 24px;
    cursor: pointer;
  }

  .input-name {
    cursor: pointer;
    height: 32px;
    width: 100%;
    outline: none;
    border: none;
  }

  .input-name::placeholder {
    font-size: 24px;
    font-weight: 600;
    color: #9cb2b4;
    font-family: Montserrat, sans-serif;
    border-left: auto; 
  }

  .participant-input {
    border-radius: 8px;
    background-color: #f5feff;
    margin-top: 10px;
    width: 100%;
    height: 32px;
    font-size: 16px;
    color: #9cb2b4;
    font-weight: 300;
    line-height: 1;
    padding: 8px;
    margin-top: 5px;
    border: 1px solid #9cb2b4;
    box-sizing: border-box;
  }

  label {
    display: flex;
    align-items: center;
    font-size: 16px;
    color: #003940;
  }

  .icon {
    width: 20px;
    height: 20px;
    margin-right: 8px;
  }

  .form-group {
    margin-bottom: 5px;
    display: flex;
    flex-direction: column;
  }

  .form-group-calendar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }

  .input-date {
    width: 150px;
    height: 32px;
    border: 1px solid #9cb2b4;
    border-radius: 8px;
    background-color: #f5feff;
    font-size: 16px;
    color: #9cb2b4;
    appearance: none;
  
  }

  .custom-date-picker,
  .custom-time-picker {
    position: relative;
    display: flex;
    align-items: center;
    cursor: pointer;
  }

  .input-date::-webkit-calendar-picker-indicator {
    opacity: 0; 
    cursor: pointer;
  }

  .input-time::-webkit-inner-spin-button,
  .input-time::-webkit-calendar-picker-indicator {
    opacity: 0;
    cursor: pointer;
  }


  .arrow {
    position: absolute;
    right: 10px;
    pointer-events: none;
    font-size: 14px;
  }

  .form-group-priority {
    display: flex;
    gap: 40px; 
    font-size: 16px;
  }

  .radio {
    appearance: none;
    width: 16px;
    height: 16px;
    border-radius: 50%;
    margin-right: 5px;
    vertical-align: middle;
    cursor: pointer;
    border: none;
  }

  .alta {
    background-color: red;
  }

  .media {
    background-color: orange;
  }

  .baja {
    background-color: green;
  }

  .radio:checked {
    border: 2px solid black;
  }

  .input-radio {
    display: flex;
    align-items: center;
    gap: 20px;
  }

  .text-description {
    width: 100%;
    height: 95px;
    border: 1px solid #9cb2b4;
    border-radius: 8px;
    background-color: #f5feff;
    font-size: 16px;
    color: #9cb2b4;
    padding: 5px;
    box-sizing: border-box;
  }

  .input-select {
    width: 200px;
    height: 32px;
    border: 1px solid #9cb2b4;
    border-radius: 8px;
    background-color: #f5feff;
    font-size: 16px;
    color: #9cb2b4;
  }

  .form-group-alert,
  .form-group-repeat {
    display: flex;
    justify-content: space-between; 
  }

  .input-time {
    width: 200px;
    height: 32px;
    border: 1px solid #9cb2b4;
    border-radius: 8px;
    background-color: #f5feff;
    font-size: 16px;
    color: #9cb2b4;
    cursor: pointer;
  }

  .form-actions {
    display: flex;
    justify-content: end;
    gap: 24px;
    margin-top: 25px;
  }

  .submit-btn {
    background-color: #007E8E;
    color: white;
    border: none;
    cursor: pointer;
    border-radius: 8px;
    width: 121px;
    height: 36px;
    font-size: 16px;
    font-weight: 600;
    line-height: 20px;
  }

  .cancel-btn {
    background-color: white;
    color: #003940;
    border-color: #007E8E;
    cursor: pointer;
    border-radius: 8px;
    width: 121px;
    height: 36px;
    font-size: 16px;
    font-weight: 600;
    line-height: 20px;
  }
</style>
