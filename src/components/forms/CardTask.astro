<div class="modal" aria-modal="true" role="dialog" aria-labelledby="modalTitle">
  <div class="modal-content">
    <div class="header-form">
      <h1 id="modalTitle" class="modal-title" aria-label="Cerrar">
        Crear Recordatorio
      </h1>
      <button class="close-btn" aria-label="Cerrar">
        <img src="/icons/icon-close.svg" alt="Cerrar" class="icon" />
      </button>
    </div>
    <form id="taskForm" class="form-content">
      <div class="form-group-details">
        <div class="form-group-title">
          <input
            type="text"
            id="title"
            name="title"
            class="input-title"
            required
            placeholder="Titulo Recordatorio"
          />
          <input
            type="text"
            id="subtitle"
            name="subtitle"
            class="input-subtitle"
            placeholder="Subtitulo"
          />
          <span class="error" id="titleError"></span>
        </div>
        <div class="form-group-calendar">
          <label for="day" class="label">
            <img
              src="/icons/icon-calendar.svg"
              alt="Calendario icono"
              class="icon"
            /> Fecha
          </label>
          <div class="custom-date-picker">
            <input
              type="date"
              id="dayStar"
              name="dayStar"
              class="input-date"
              required
            />
            <img
              src="/icons/icon-arrow.svg"
              alt="Icono Flecha"
              class="arrowStar"
            />
            <input
              type="date"
              id="dayEnd"
              name="dayEnd"
              class="input-date"
              required
            />
            <img
              src="/icons/icon-arrow.svg"
              alt="Icono Flecha"
              class="arrowEnd"
            />
          </div>
          <div class="text-date">
            <span id="start"> Inicio</span>
            <span id="end"> Fin (Opcional)</span>
          </div>
          <div class="form-group-time">
            <label for="starTime" class="label-time">
              <img
                src="/icons/icon-repeat.svg"
                alt="Repite icono"
                class="icon"
              /> Hora Inicio
            </label>
            <div class="custom-time-picker">
              <input
                type="time"
                id="starTime"
                name="starTime"
                class="input-time"
                required
              />
              <img
                src="/icons/icon-arrow.svg"
                alt="Icono Flecha"
                class="arrowStarTime"
              />
            </div>
            <span class="error" id="hourError"></span>
          </div>
          <span class="error" id="dayError"></span>
        </div>
      </div>
      <div class="form-group">
        <label for="participant" class="label-participant"
          >Añadir Participante/es (Opcional)</label
        >
        <div class="participant">
          <img
            src="/icons/icon-users.svg"
            alt="Participantes icono"
            class="icon"
          />
          <input
            type="text"
            id="participant"
            name="participant"
            class="input-participant"
            placeholder="Nombre o email del participante"
            required
          />
        </div>
        <span class="error" id="participantError"></span>
      </div>

      <div class="form-group">
        <label for="repeat" class="label-repeat">
          <img src="/icons/icon-repeat.svg" alt="Alerta icono" class="icon" /> Frecuencia para envío de notificaciones
        </label>
        <select id="repeat" name="repeat" class="select" required>
          <option disabled selected>Seleccionar si se repite</option>
          <option value="noRepeat">No se repite</option>
          <option value="day">Diariamente</option>
          <option value="week">Semanalmente (los lunes)</option>
          <option value="month">Mensual (primer lunes del mes)</option>
          <option value="year">Anual (la fecha seleccionada)</option>
        </select>
        <span class="error" id="repeatError"></span>
      </div>

      <div class="form-group">
        <label for="description" class="label-description"> Descripción </label>
        <textarea
          id="description"
          name="description"
          class="text-description"
          placeholder="Breve descripción de la actividad"
          required></textarea>
        <span class="error" id="descriptionError"></span>
      </div>

      <div class="form-actions">
        <button type="button" id="backDateHour" class="cancel-btn">Anterior</button>
        <button type="submit" class="next-btn">Crear</button>
      </div>
    </form>
  </div>
</div>

<script type="module" src="/src/utils/interactionsCards.js"></script>
<script type="module" src="/src/utils/validationForm.js"></script>

<style>
  .modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(218, 218, 218, 0.616);
    display: flex; /* QUITAR CUANDO TERMINE DE HACER LA MODAL Y ADAPTAR EL CODIGO JS PARA ABRIRLA Y CERRARLA */
    justify-content: center;
    align-items: center;
  }

  .modal.is-active {
    display: flex;
  }

  .modal-content {
    background: #fefefe;
    border-radius: 16px;
    width: 576px;
    height: 616px;
    box-shadow: 0px 1px 2px 0px rgba(41, 79, 84, 0.21);
    display: flex;
    flex-direction: column;
    gap: 16px;
    padding: 24px;
    border: solid 2px red;
  }

  label {
    display: flex;
    align-items: center;
    gap: 5px;
    font-size: 14px;
    font-weight: 500;
    line-height: 24px;
    color: #6b888c;
    font-family: var(--font-montserrat);
  }

  .label-participant,
  .label-repeat,
  .label-description {
    display: flex;
    align-items: center;
    gap: 5px;
    font-size: 16px;
    font-weight: 500;
    line-height: 24px;
    color: #4c797d;
    font-family: var(--font-montserrat);
  }

  .form-group {
    display: flex;
    flex-direction: column;
    width: 100%;
    margin-top: 16px;
  }

  .form-content {
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .close-btn {
    background: none;
    border: none;
    cursor: pointer;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .header-form {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .modal-title {
    margin: 0;
    font-size: 24px;
    font-weight: 600;
    color: var(--color-primary);
    line-height: 16px;
  }

  .error {
    color: red;
    font-size: 10px;
  }

  .form-group-details {
    display: flex;
    gap: 8px;
    padding: 8px;
    justify-content: center;
    align-items: stretch;
    background: #effbfc;
    border-radius: 4px;
  }

  .form-group-date {
    display: flex;
    flex-direction: column;
    gap: 16px;
    padding: 24px;
  }

  .form-group-title {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    width: 100%;
    background: #fefefe;
    border-radius: 4px;
    gap: 8px;
    padding: 16px;
    box-sizing: border-box;
    flex-grow: 1;
  }

  .form-group-reminder {
    display: flex;
    flex-direction: column;
    gap: 16px;
    padding: 24px;
  }

  .form-group-calendar {
    width: 100%;
    border-radius: 4px;
  }

  .arrow {
    position: absolute;
    right: 6px;
    pointer-events: none;
    top: 50%;
  }

  .arrowEnd {
    position: absolute;
    pointer-events: none;
    right: 8px;
    top: 25%;
  }

  .arrowStar {
    position: absolute;
    pointer-events: none;
    top: 25%;
    left: 120px;
  }

  .arrowStarTime {
    position: absolute;
    pointer-events: none;
    top: 25%;
    right: 8px;
  }

  .input-date {
    width: 100%;
    padding: 8px;
    border-radius: 4px;
    background: #fefefe;
    font-size: 14px;
    color: #adcbcc;
    appearance: none;
    border: 1px solid rgb(237, 240, 241);
    font-family: var(--font-montserrat);
    cursor: pointer;
  }

  .custom-date-picker {
    position: relative;
    display: flex;
    align-items: center;
    cursor: pointer;
    gap: 13px;
    margin-top: 8px;
  }

  .text-date {
    display: flex;
    justify-content: space-between;
    font-size: 12px;
    font-family: var(--font-montserrat);
    font-weight: 500;
    line-height: 16px;
    color: #808b8c;
    margin-top: 8px;
    margin-bottom: 8px;
  }

  #end {
    margin-right: 60px;
  }

  .input-date::-webkit-calendar-picker-indicator {
    opacity: 0;
    cursor: pointer;
  }

  .input-time {
    width: 100%;
    padding: 8px;
    border-radius: 4px;
    background: #fefefe;
    font-size: 14px;
    color: #adcbcc;
    appearance: none;
    border: 1px solid rgb(237, 240, 241);
    font-family: var(--font-montserrat);
    cursor: pointer;
  }

  .input-time img {
    align-self: center;
    display: flex;
  }

  .custom-time-picker {
    position: relative;
    display: flex;
    margin-top: 11px;
  }

  .input-time::-webkit-calendar-picker-indicator {
    cursor: pointer;
    opacity: 0;
  }

  .participant {
    display: flex;
    align-items: center;
    width: 100%;
    align-self: stretch;
    padding: 8px;
    gap: 8px;
    border-radius: 4px;
    background: #fafafa;
  }

  .input-participant {
    border-radius: 4px;
    background: #fefefe;
    width: 100%;
    font-size: 14px;
    color: #d7dfe0;
    font-weight: 500;
    line-height: 24px;
    padding: 8px;
    border: 1px solid #edf0f1;
    font-family: var(--font-montserrat);
    cursor: pointer;
  }

  .input-participant::placeholder {
    color: #d7dfe0;
    font-size: 14px;
    font-weight: 500;
    line-height: 24px;
    font-family: var(--font-montserrat);
  }

  .input-title {
    border-radius: 4px;
    background: #fcfcfc;
    width: 100%;
    font-size: 16px;
    color: #2c97a0;
    font-weight: 500;
    padding: 0;
    border: none;
    box-sizing: border-box;
    font-family: var(--font-montserrat);
  }
  .input-title::placeholder {
    color: #2c97a0;
    font-size: 16px;
    font-weight: 600;
    line-height: 16px;
    font-family: var(--font-montserrat);
    opacity: 0.4;
  }

  .input-subtitle {
    margin: 0;
    padding: 0;
    font-size: 14px;
    font-family: var(--font-montserrat);
    border: none;
  }

  .input-subtitle::placeholder {
    color: #6b888c;
    opacity: 0.4;
    font-size: 14px;
    font-weight: 400;
    line-height: 16px;
    font-family: var(--font-montserrat);
  }

  .select {
    width: 100%;
    margin-top: 10px;
    border: none;
    border-radius: 8px;
    background-color: #eef6f7;
    font-size: 14px;
    color: #433e3f;
    cursor: pointer;
    padding: 16px;
  }

  .text-description {
    width: 100%;
    height: 96px;
    border-radius: 8px;
    margin-top: 10px;
    background: #eef6f7;
    font-size: 14px;
    color: #433e3f;
    padding: 16px;
    box-sizing: border-box;
    border: none;
  }

  .text-description::placeholder {
    color: #9cb2b4;
  }

  .form-actions {
    display: flex;
    justify-content: end;
    padding: 24px;
    width: 100%;
    box-sizing: border-box;
    margin-top: auto;
    border-top: solid 2px #e9e9e9;
  }

  .action-buttons button {
    padding: 16px 32px;
    border-radius: 8px;
    border: none;
    font-size: 16px;
    font-weight: 600;
    line-height: 20px;
  }

  .action-buttons {
    display: flex;
    gap: 24px;
  }

  .next-btn {
    background: #17484e;
    color: #e9eff1;
    cursor: pointer;
  }

  .cancel-btn {
    background: #e9eff1;
    color: #494949;
    cursor: pointer;
  }
</style>
