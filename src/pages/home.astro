---
import HomeLayout from "../layouts/HomeLayout.astro";
const diasSemana = ['Domingo', 'Lunes', 'Martes', 'Miércoles', 'Jueves', 'Viernes', 'Sábado']
const meses = ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre', 'Diciembre']
const fecha = new Date()
const diaNumerico = fecha.getDate()
const diaLiteral = fecha.getDay()
const mesActual = fecha.getMonth()

---

<HomeLayout title="LeanMind - Home">
  <main
    class="w-full h-full flex-grow flex flex-col items-center rounded-tr-2xl rounded-tl-2xl px-4"
  >
    <div class="w-[356px] h-[74px] bg-bg_secondary rounded-2xl my-7 flex flex-col justify-center items-center text-[#287D88]">
      <span class="font-['Montserrat Alternates'] text-[24px] leading-8">2024</span>
      <div class="justify-center items-center flex flex-row gap-2">
        <button class="flex justify-center items-center p-2 w-12 h-12">
          <img src="/icons/arrow-left.svg" alt="arrow-left">
        </button>
        <span class="font-['Montserrat Alternates'] text-[24px] leading-8">{diasSemana[diaLiteral]}, {diaNumerico} {meses[mesActual]}</span>
        <button class="flex justify-center items-center p-2 w-12 h-12">
          <img src="/icons/arrow-right.svg" alt="arrow-right">
        </button>
      </div>
    </div>
    <div class="w-full h-full bg-bg_secondary rounded-tr-2xl rounded-tl-2xl">
      <div
        class="w-full h-48 rounded-tr-2xl rounded-tl-2xl flex justify-center items-center relative"
      >
        <img
          src="https://s3-alpha-sig.figma.com/img/4017/77c0/9d6e05785dcb509fbc05dcda61aaf4db?Expires=1729468800&Key-Pair-Id=APKAQ4GOSFWCVNEHN3O4&Signature=CXnzrbKxlCrOKOuUlpli6HP3kbvERP8BpaaNN~Uh~xOVM9XPIxo5noiydrDqRmRUBl4JmDh2kr1bPXztoE~wTkfY1r7K67LuROBq0hikScEKEEQ03iVn9zO8MN3AZ~ar5j8XI7dTx8rTSa1yOyab6b8~NNJUM3TnRVxbN8wv17~yOVNSq4QL77TDnWA9t-pFKGaK76j2y8oLHrUjBvx7MGa-YOtfyYDjw9DDQ-ndOgwuTBN70yGBm3xWbGSrV4Fo120NlO5eOqnpBPMlZYUcbGj~0vihVd~5pHVu~~h11yNlXlV7MCrbKAXf8nBqD0XhMerFZ1xcemaEvpYuszYWbw__"
          alt="image"
          class="w-full h-full object-cover rounded-2xl opacity-35"
        />
        <div
          class="absolute rounded-2xl bg-[#1B1F26B8] p-2 flex flex-col text-[#E2F4F7] items-center justify-center"
        >
          <span
            class="text-[40px] leading-[56px] font-['Montserrat Alternates']"
            >¡Hola de nuevo Juan!</span
          >
          <span class="text-[24px] leading-8 font-['Montserrat Alternates']"
            >¿Qué tienes planeado para hoy?</span
          >
        </div>
      </div>
      <div
        class="w-full h-auto mt-20 flex flex-col md:flex-row gap-7 justify-center items-center"
      >
        <button
          class="w-[300px] h-14 rounded-2xl border border-[#287D88] bg-[#11363A] flex flex-row justify-between items-center p-4"
          ><span class="w-52 text-[#E9EFF1] font-['Montserrat Alternates']"
            >Crear Tarea</span
          ><img
            src="/icons/plus.svg"
            alt="icon__button1"
            class="w-8 h-8"
          /></button
        >
        <button
          class="w-[300px] h-14 rounded-2xl border border-[#287D88] bg-[#FBFBFB] flex flex-row justify-between items-center p-4"
          ><span class="w-52 text-[#287D88] font-['Montserrat Alternates']"
            >Crear Tarea</span
          ><svg
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="M16 2V6M8 2V6M3 10H21M5 4H19C20.1046 4 21 4.89543 21 6V20C21 21.1046 20.1046 22 19 22H5C3.89543 22 3 21.1046 3 20V6C3 4.89543 3.89543 4 5 4Z"
              stroke="#287D88"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
          </svg>
        </button>
      </div>
    </div>
  </main>
</HomeLayout>
